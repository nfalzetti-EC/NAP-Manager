<Window x:Class="TestApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Advanced Power Control Panel" Height="600" Width="600">
    <Grid Margin="10">
        <TabControl>
            <!-- Status Dashboard -->
            <TabItem Header="Status Dashboard">
                <StackPanel Margin="10">
                    <TextBlock FontSize="18" FontWeight="Bold" Text="Current Power Settings" Margin="0,0,0,10"/>
                    <Button Content="Refresh" Click="RefreshStatus_Click" Width="100" Margin="0,0,0,10"/>

                    <TextBlock x:Name="txtModernStandbyStatus" FontSize="14" Margin="0,5"/>
                    <TextBlock x:Name="txtHibernateStatus" FontSize="14" Margin="0,5"/>
                    <TextBlock x:Name="txtSleepTimeoutAC" FontSize="14" Margin="0,5"/>
                    <TextBlock x:Name="txtSleepTimeoutDC" FontSize="14" Margin="0,5"/>
                    <TextBlock x:Name="txtDisplayTimeoutAC" FontSize="14" Margin="0,5"/>
                    <TextBlock x:Name="txtDisplayTimeoutDC" FontSize="14" Margin="0,5"/>
                    <TextBlock x:Name="txtUSBPowerAC" FontSize="14" Margin="0,5"/>
                    <TextBlock x:Name="txtUSBPowerDC" FontSize="14" Margin="0,5"/>
                </StackPanel>
            </TabItem>

            <!-- Sleep Settings -->
            <TabItem Header="Sleep Settings">
                <StackPanel Margin="10">
                    <TextBlock FontSize="16" FontWeight="Bold" Text="Sleep Timeout Settings" Margin="0,0,0,10"/>
                    <TextBlock Text="Sleep Timeout (AC Power, in minutes):"/>
                    <TextBox x:Name="txtSleepAC" Width="100" Margin="0,5"/>
                    <Button Content="Apply AC Sleep Timeout" Click="ApplySleepTimeoutAC_Click" Width="180" Margin="0,10"/>
                    <TextBlock Text="Sleep Timeout (Battery, in minutes):"/>
                    <TextBox x:Name="txtSleepDC" Width="100" Margin="0,5"/>
                    <Button Content="Apply DC Sleep Timeout" Click="ApplySleepTimeoutDC_Click" Width="180" Margin="0,10"/>
                </StackPanel>
            </TabItem>

            <!-- Display Settings -->
            <TabItem Header="Display Settings">
                <StackPanel Margin="10">
                    <TextBlock FontSize="16" FontWeight="Bold" Text="Display Timeout Settings" Margin="0,0,0,10"/>
                    <TextBlock Text="Display Timeout (AC Power, in minutes):"/>
                    <TextBox x:Name="txtDisplayAC" Width="100" Margin="0,5"/>
                    <Button Content="Apply AC Display Timeout" Click="ApplyDisplayTimeoutAC_Click" Width="180" Margin="0,10"/>
                    <TextBlock Text="Display Timeout (Battery, in minutes):"/>
                    <TextBox x:Name="txtDisplayDC" Width="100" Margin="0,5"/>
                    <Button Content="Apply DC Display Timeout" Click="ApplyDisplayTimeoutDC_Click" Width="180" Margin="0,10"/>
                </StackPanel>
            </TabItem>

            <!-- Hibernate Settings -->
            <TabItem Header="Hibernate Settings">
                <StackPanel Margin="10">
                    <TextBlock FontSize="16" FontWeight="Bold" Text="Hibernate Settings" Margin="0,0,0,10"/>
                    <Button Content="Enable Hibernate" Click="EnableHibernate_Click" Width="200" Margin="0,5"/>
                    <Button Content="Disable Hibernate" Click="DisableHibernate_Click" Width="200" Margin="0,5"/>
                    <TextBlock Text="Hibernate Timeout (AC Power, in minutes):"/>
                    <TextBox x:Name="txtHibernateAC" Width="100" Margin="0,5"/>
                    <Button Content="Apply AC Hibernate Timeout" Click="ApplyHibernateTimeoutAC_Click" Width="180" Margin="0,10"/>
                    <TextBlock Text="Hibernate Timeout (Battery, in minutes):"/>
                    <TextBox x:Name="txtHibernateDC" Width="100" Margin="0,5"/>
                    <Button Content="Apply DC Hibernate Timeout" Click="ApplyHibernateTimeoutDC_Click" Width="180" Margin="0,10"/>
                </StackPanel>
            </TabItem>

            <!-- Advanced Settings -->
            <TabItem Header="Advanced Settings">
                <StackPanel Margin="10">
                    <TextBlock FontSize="16" FontWeight="Bold" Text="Advanced Power Options" Margin="0,0,0,10"/>
                    <Button Content="Enable Modern Standby" Click="EnableModernStandby_Click" Width="200" Margin="0,5"/>
                    <Button Content="Disable Modern Standby" Click="DisableModernStandby_Click" Width="200" Margin="0,5"/>
                    <Button Content="Enable USB Suspend (AC)" Click="EnableUSBAC_Click" Width="200" Margin="0,5"/>
                    <Button Content="Disable USB Suspend (AC)" Click="DisableUSBAC_Click" Width="200" Margin="0,5"/>
                    <Button Content="Enable USB Suspend (Battery)" Click="EnableUSBDC_Click" Width="200" Margin="0,5"/>
                    <Button Content="Disable USB Suspend (Battery)" Click="DisableUSBDC_Click" Width="200" Margin="0,5"/>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>